    <section id="login" class="pad-lg light-gray-bg">
      <div class="container">
        <div class="row">
          <div class="col-sm-8 col-sm-offset-2 text-center">
            <br/>
            <br/>
            <span class= "glyphicon glyphicon-user" aria-hidden="true"> </span>
            <h2 class="black">Login</h2>

            <div class="row">
              <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
              <%= flash[:invaliduser] %>
              <%= flash[:invalidpass] %>
              <br/>
              <br/>
                <%= form_for :user, :url => url_for(:controller => 'sessions', :action => 'create'), :class => "form" do |f| %> 
                  <div class="form-group">
                    <%= f.text_field :user_name, :class => 'form-control', :placeholder => 'Username'%> 
                    <br/>
                    <%= f.password_field :password, :class => 'form-control', :placeholder => 'Password' %>
                    <br/>
                  </div>
                  <%= f.submit "Login", :class => "btn btn-primary btn-lg" %>
                <% end %>
              </div>
            </div><!--End Form row-->
            <br/>
            <p> Not yet registered? <b><%= link_to "Sign up!", signup_path %> </p></b>
          </div>
        </div>
      </div>
    </section>