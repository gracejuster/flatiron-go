<%= flash[:invaliduser] %>
<%= flash[:invalidpass] %>

<%= form_for :user, :url => url_for(:controller => 'sessions', :action => 'create') do |f| %>
  <%= f.label :user_name %>
  <%= f.text_field :user_name %> 
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.submit "Login" %>
<% end %>
