<div class="row">
<%= form_for @user, html: {:role => "form", :class => "col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3"} do |f| %>
  
  <% if @user.errors.any? %>
    <h3>Errors:</h3>
      <% @user.errors.keys.each { |attr| @user.errors[attr].delete_at(1) } %> 
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li><br>
        <% end %>
        </ul>
  <% end %>
  <div class="form-group">
    <%= f.label :cohort %>
    <%= f.collection_select :cohort_id, Cohort.all, :id, :name, class: 'form-control' %><br>
  </div>
  <div class="form-group">
  <%= f.label :email %> 
  <%= f.text_field :email, class: 'form-control' %><br>
  </div>
  <div class="form-group">
  <%= f.label :user_name %> 
  <%= f.text_field :user_name, class: 'form-control' %><br>
  </div>
  <div class="form-group">
  <%= f.label :password %> 
  <%= f.password_field :password, class: 'form-control' %><br>
  </div>
  <%= f.submit "Sign Up" %> 

<%end%>
</div>