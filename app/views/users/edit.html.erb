<div class="row">
<%= form_for @user, html: {:role => "form", :class => "col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3"} do |f| %>
  <div class="form-group">
  <%= f.label :name %> 
  <%= f.text_field :name, class: 'form-control', maxlength: "30" %><br>
  </div>
  <div class="form-group">
  <%= f.label :bio %> 
  <%= f.text_area :bio, class: 'form-control', maxlength: "500"%><br>
  </div>
  <%= f.submit "Update Profile" %> 
<%end%>
