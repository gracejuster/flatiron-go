<%= form_for @meetup do |f| %>
  <%= f.label :date %>
  <%= f.collection_select :date, @days, :to_date, :to_date %><br>
  <%= f.label :time %>
  <%= f.collection_select :time, @times, :to_s, :to_s %><br>
  <%= f.label :location %>
  <%= f.collection_select :location_id, Location.all, :id, :name %><br>
  <%= f.label :title%> 
  <%= f.text_field :title %><br>
  <%= f.label :description %><br>
  <%= f.text_area :description %><br>
  <%= f.submit "Create Meetup" %> 
<%end%>
