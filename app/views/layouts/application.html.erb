<!DOCTYPE html>
<html>
  <head>
    <title>Flatiron Go</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<!-- Fixed navbar -->
  <% if current_user %>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "Flatiron Go", root_path, class: "navbar-brand" %>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li class="li-navbar"> <%= link_to "My Profile", profile_path(session[:user_id]) %> </li>
              <li class="li-navbar"> <%= link_to "Meetup Dashboard", dashboard_path %> </li>
              <li class="li-navbar"> <%= link_to "All Meetups", meetups_path %> </li>
              <li class="li-navbar"> <%= link_to "Logout", logout_path, method: :delete %> </li>

              <li class="li-navbar-search"> <%= form_tag meetups_path, :method => 'get', :class=> 'navbar-form' do %>
                <div class="form-group">
                  <%= text_field_tag :search, params[:search], :placeholder => 'Search Meetups', :class => 'form-control form-control-short' %>
                </div>
                <%= button_tag(type: 'submit', class: "btn btn-default") do %>
                  <span class="glyphicon glyphicon-search"></span> 
                <% end %> 
              <% end %> </li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  <% end %>
    <%= yield %>
  </body>
</html>
